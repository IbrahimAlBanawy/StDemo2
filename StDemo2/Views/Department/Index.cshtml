
@model List<Department>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet"/>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/department">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/department">Department</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/student">Student</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <a asp-action="create" asp-controller="department" class="btn btn-danger">Create</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Capacity</th>
                <th>Opeartion</th>


            </tr>
        </thead>
        <tbody>
            
            @if(Model.Count==0){
               <tr>
                   <td colspan="4"></td>
               </tr>
            }
            else{
                foreach(var item in Model)
                {
                    <tr>
                        <td>@item.DeptId</td>
                        <td>@item.DeptName</td>
                        <td>@item.Capacity</td>
                        <td>
                            <a asp-action="readdata" asp-controller="department" asp-route-id="@item.DeptId" class="btn btn-outline-info">Details</a>
                            <a asp-action="update" asp-controller="department" asp-route-id="@item.DeptId" class="btn btn-outline-danger">Update</a>
                            <a asp-action="delete" asp-controller="department" asp-route-id="@item.DeptId" class="btn btn-outline-dark" onclick="return confirm('are you sure')">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</body>
</html>
