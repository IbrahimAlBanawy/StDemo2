@model Department
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <form asp-action="create" asp-controller="department" method="post" class="needs-validation">

        <div class="row g-3">
            @*Dept id*@
            <div class="col-md-12">
                <label asp-for="DeptId" class="form-label">Dept ID</label>
                <input asp-for="DeptId" class="form-control" />
                <span asp-validation-for="DeptId" class="text-danger"></span>
            </div>
            @*Dept name*@
            <div class="col-md-12">
                <label asp-for="DeptName" class="form-label">Dept Name</label>
                <input asp-for="DeptName" class="form-control" />
                <span asp-validation-for="DeptName" class="text-danger"></span>
            </div>
            @*capacity*@
            <div class="col-md-12">
                <label asp-for="Capacity" class="form-label">Capacity</label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>

        </div>
        @*submit*@
        <div class="mt-4 text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>

    </form>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>
</html>
